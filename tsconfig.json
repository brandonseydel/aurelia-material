{
  "compilerOptions": {
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,    
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    "strict": true,
    "alwaysStrict": true,
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom",
      "dom.iterable"
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "node_modules"
  ],
  "include": [
    "src",
    "dev-app"
  ]
}